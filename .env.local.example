# Environment Variables Configuration
# Copy this file to .env.local and fill in the values

# Database
DATABASE_URL="your-database-url"

# Email Service
RESEND_API_KEY="your-resend-api-key"
NEXT_PUBLIC_SITE_EMAIL_FROM="your-email@example.com"

# Redis Cache
UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# Sanity CMS (Required for blog functionality)
NEXT_PUBLIC_SANITY_PROJECT_ID="your-sanity-project-id"
NEXT_PUBLIC_SANITY_DATASET="production"
NEXT_PUBLIC_SANITY_USE_CDN="true"
NEXT_PUBLIC_SANITY_API_VERSION="2024-02-12"

# Site Configuration
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_LINK_PREVIEW_ENABLED="false"

# Optional
LINK_PREVIEW_API_BASE_URL=""
SITE_NOTIFICATION_EMAIL_TO=""

# Development
NODE_ENV="development"
VERCEL_ENV="development"